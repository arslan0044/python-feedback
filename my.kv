<Button>: #parent tag for buttons, meaning that every button tag will have these properties
    font_size: 20
    color: 0.4, 0.4, 0.7, 1
    size_hint: 0.1, 0.1

<FloatLayout>:
    Label:
        text: "Name:"
        bold: True
        font_name: "KeepCalm"
        pos_hint: {"y":0.7, "x":0.11}
        color: 0.1, 0.1, 0.1, 1
        size_hint: 0.1, 0.1 #idk why but this for some reason also changes the position
        font_size: 50

    Label:
        text: "Stars:"
        bold: True
        font_name: "KeepCalm"
        pos_hint: {"y":0.1, "x":0.11}
        color: 0.1, 0.1, 0.1, 1
        size_hint: 0.1, 0.1 #idk why but this for some reason also changes the position
        font_size: 50

    ToggleButton:
        id: star1
        pos_hint: {"y":0.09, "x":0.3}
        background_normal: 'normal.png'
        background_down: 'down.png'
        border: 30,30,30,30
        on_press: app.star1()


